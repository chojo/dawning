%form.form-horizontal{name: 'launchForm', 'ng-submit' => 'launchForm.$valid && monitorCtrl.launchLevel(level)', novalidate: true}
  .form-group
    %label.control-label.col-sm-2{for: "level_name"}
      Name
    .col-sm-10
      %input{style: 'width: auto', type: 'text', required: true, id: 'level_name', name: 'level[name]', 'ng-model' => 'level.name'}
  %button.btn.btn-primary{type: "submit"}
    %i.fa.fa-rocket
    Launch
  %a{:href => "#", 'ng-click' => "monitorCtrl.removeLevel(level)"}
    Cancel

:coffee
  $('#level_name').focus()
