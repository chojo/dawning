%form.form-horizontal{name: 'launchForm', 'ng-submit' => 'launchForm.$valid && panelCtrl.launchLevel()', novalidate: true}
  .form-group
    %label.sr-only.control-label{for: "level_name"}
    .col-sm-12
      %input{style: 'width: auto', type: 'text', placeholder: 'Name', required: true, id: 'level_name', name: 'level[name]', 'ng-model' => 'level.name'}
  %button.btn.btn-primary{:type => "submit", 'ng-disabled' => 'panelCtrl.sending' }
    %i.fa{'ng-class' => "{'fa-rocket': !panelCtrl.sending, 'fa-spin': panelCtrl.sending, 'fa-spinner': panelCtrl.sending}"}
    Launch
  %a.cancel{:href => "#", 'ng-click' => "panelCtrl.removeLevel(level)"}
    Cancel

:coffee
  $('#level_name').focus()
