%div{style: 'margin-top: 5px; margin-bottom: 15px;'}
  %div{'ng-show' => "monitorCtrl.hasState(level,'launched')"}
    %form{name: 'buildForm', 'ng-submit' => 'buildForm.$valid && monitorCtrl.buildLevel(level)', novalidate: true}
      %select{id:"config_file", name:"config_file", 'ng-model' => 'level.config_file', 'ng-options' => "config_file for config_file in monitorCtrl.config_files", required: true }
      %button.btn.btn-primary.spinner{:type => 'submit', 'ng-disabled' => 'monitorCtrl.sending' }
        %i.fa{'ng-class' => "{'fa-cube': !monitorCtrl.sending, 'fa-spin': monitorCtrl.sending, 'fa-spinner': monitorCtrl.sending}"}
        Build
  %a.btn.btn-success.spinner{:href => '#', 'ng-show' => "monitorCtrl.hasState(level,'ready')", 'ng-click' => "monitorCtrl.runLevel(level)", 'ng-disabled' => 'monitorCtrl.sending'}
    %i.fa{'ng-class' => "{'fa-play': !monitorCtrl.sending, 'fa-spin': monitorCtrl.sending, 'fa-spinner': monitorCtrl.sending}"}
    Run
  %a.btn.btn-warning.spinner{:href => '#', 'ng-show' => "monitorCtrl.hasState(level,'running')", 'ng-click' => "monitorCtrl.stopLevel(level)", 'ng-disabled' => 'monitorCtrl.sending'}
    %i.fa{'ng-class' => "{'fa-power-off': !monitorCtrl.sending, 'fa-spin': monitorCtrl.sending, 'fa-spinner': monitorCtrl.sending}"}
    Stop
  %a.btn.btn-danger.spinner{:href => '#', 'ng-show' => "monitorCtrl.hasState(level,'stopped')", 'ng-click' => "monitorCtrl.removeLevel(level)", 'ng-disabled' => 'monitorCtrl.sending'}
    %i.fa{'ng-class' => "{'fa-times': !monitorCtrl.sending, 'fa-spin': monitorCtrl.sending, 'fa-spinner': monitorCtrl.sending}"}
    Remove
