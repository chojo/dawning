.navbar.navbar-static-top.navbar-inverse
  .navbar-inner
    .container
      .navbar-collapse.collapse
        %ul.nav
          = navigation_item 'Home', root_path
          = navigation_item 'Documentation', root_path
          = navigation_item 'User Ranking', users_path
          - unless current_user
            = navigation_item 'Register', register_path, id: 'register'
            = navigation_item 'Login', login_path, id: 'login'
          - else
            = navigation_item 'Account', edit_user_path(current_user)
            - if current_user.admin?
              %li.dropdown{class: navigation_active?(:admin) && 'active'}
                = link_to '#', data: {toggle: 'dropdown'} do
                  Admin
                  %b.caret
                %ul.dropdown-menu
                  = navigation_item 'Levels', admin_levels_path

        %ul.nav.pull-right
          -if current_user
            %li
              %a{:href => logout_path, :id => 'logout'} Logout

      %a.btn.navbar-btn{'data-toggle' => 'collapse', 'data-target' => '.nav-collapse'}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
