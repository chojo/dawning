%nav.navbar.navbar-static-top.navbar-inverse{role: 'navigation'}
  .nav-header
    %button.navbar-toggle{"type" => "button", "data-toggle" => "collapse", "data-target" => "#main-menu"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar

  #main-menu.navbar-collapse.collapse
    %ul.nav.navbar-nav
      = navigation_item 'Home', root_path
      = navigation_item 'Documentation', root_path
      = navigation_item 'User Ranking', users_path
      - unless current_user
        = navigation_item 'Register', register_path, id: 'register'
        = navigation_item 'Login', login_path, id: 'login'
      - else
        = navigation_item 'Account', edit_user_path(current_user)
        - if current_user.admin?
          %li.dropdown{class: navigation_active?(:admin) && 'active'}
            = link_to '#', class: 'dropdown-toggle', data: {toggle: 'dropdown'} do
              Admin
              %b.caret
            %ul.dropdown-menu
              = navigation_item 'Levels', admin_levels_path

    .navbar-text.navbar-right
      -if current_user
        = link_to 'Logout', logout_path, id: 'logout', class: 'navbar-link'
