- content_for :javascript do
  = javascript_include_tag "https://ajax.googleapis.com/ajax/libs/angularjs/1.3.2/angular.min.js"

%h1 Monitor
%p {{'Hello ' + 'Angular!'}}

.levels{'ng-controller' => 'MonitorController as monitor'}
  .level{'ng-repeat' => 'level in monitor.levels'}
    %div Name: {{ level.name }}
    %div State: {{ level.state }}
