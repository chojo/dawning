= simple_form_for @user, wrapper: :horizontal, html: { class: 'form-horizontal' } do |f|
  .fieldset
    %legend
      Register
    = f.input :username
    = f.input :password
    = f.input :password_confirmation, label: 'Repeat Password'
    = f.input :email, hint: 'not public visible'
    .form_actions
      = f.submit 'Register', class: 'btn btn-primary btn-lg btn-wide', id: 'register'

